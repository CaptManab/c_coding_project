#include <stdio.h>

int main() {
    int n, sum = 0;

    // Prompt user for the value of n
    printf("Enter a positive integer: ");
    scanf("%d", &n);

    // Calculate the sum of the first n natural numbers
    for (int i = 1; i <= n; ++i) {
        sum += i;
    }

    // Output the result
    printf("Sum of the first %d natural numbers is: %d\n", n, sum);

    return 0;
}
